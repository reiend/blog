
<main>
  <h1>New Blog</h1>
  <%= form_with model: @article do |form| %>

    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>

    <div>
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>

</main>
